*&---------------------------------------------------------------------*
FORM F4_CLASS  USING    P_FIELD.

  SELECT DISTINCT ZMODULE,
                  CLASS,
                  CLSDESC,
                  CLSLONGDESC
    FROM ZTCO2000
   WHERE ZMODULE IN @S_ZMODU
   ORDER BY ZMODULE, CLASS
    INTO TABLE @DATA(LT_CLASS).

  PERFORM CALL_F4 TABLES LT_CLASS
                  USING  'CLASS'.

